<!DOCTYPE html>
<html lang="en">
<head>
    <meta charset="UTF-8">
    <meta name="viewport" content="width=device-width, initial-scale=1.0">
    <link href="https://cdn.jsdelivr.net/npm/bootstrap@5.3.0/dist/css/bootstrap.min.css" rel="stylesheet" integrity="sha384-9ndCyUaIbzAi2FUVXJi0CjmCapSmO7SnpJef0486qhLnuZ2cdeRhO02iuK6FUUVM" crossorigin="anonymous">
    <link rel="stylesheet" href="https://cdnjs.cloudflare.com/ajax/libs/font-awesome/6.4.0/css/all.min.css">
    <title>{% block title %}list of users{% endblock %}</title>
</head>
<body>

    <div class="container">
        <div class="row">
            {% include "components/_adminNav.html.twig" %}
            <div class="col-9 border border-light bg-light p-3">
                <h3>list of users</h3>
                <table class="table">
                    <thead>
                        <tr>
                            <th>Post id</th>
                            <th>Pseudos</th>
                            <th>Adresse mail</th>
                            <th>Roles</th>
                            <th>Vérifié</th>
                            <th>Ban</th>
                            <th>Nombre de Post</th>
                        </tr>
                    </thead>
                    <tbody>
                        {% for user in users %}
                        <tr>
                            <td>{{user.id}}</td>
                            <td>{{user.pseudo}}</td>
                            <td>{{user.email}}</td>
                            <td>
                                {% for role in user.roles %}
                                    {% if role == "ROLE_ADMIN" %}
                                        {% set name = "Administrateur" %}
                                        {% set color = "danger" %}
                                       
                                    {% else %}
                                        {% set name = "Membre" %}
                                        {% set color = "success" %}
                            
                                    {% endif %}
                                    <span class="badge bg-{{color}}">{{ name }}</span>
                                {% endfor %}
                            </td>
                            <td>
                                <div class="form-check form-switch">
                                    <input class="form-check-input" type="checkbox" role="switch" id="switch{{ user.id }}" {{ user.isVerified ? "checked" : "" }} disabled>
                                    <label class="form-check-label" for="switch{{ user.id }}"></label>
                                </div>
                            </td>
                            <td>
                                <div class="form-check form-switch">
                                    <form action="{{ path('admin_users_ban') }}" method="post" id="banForm">
                                        <input class="form-check-input" type="checkbox" name="isBanned" role="switch" id="switch{{ user.id }}" {{ user.isBanned ? "checked" : ""}} onchange="this.form.submit()">
                                        <input type="hidden" name="userId" value="{{ user.id }}">
                                    </form>
                                </div>
                            </td>
                            <td>{{user.posts|length }}</td>
                        </tr>
                        {% endfor %}
                    </tbody>

                </table>
            </div>
        </div>
    </div>
   
</body>
</html>


