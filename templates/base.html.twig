<!DOCTYPE html>
<html>
    <head>
        <meta charset="UTF-8">
        <title>{% block title %}Welcome!{% endblock %}</title>
        <meta name="viewport" content="width=device-width, initial-scale=1.0">
        <link href="https://cdn.jsdelivr.net/npm/bootstrap@5.3.0/dist/css/bootstrap.min.css" rel="stylesheet" integrity="sha384-9ndCyUaIbzAi2FUVXJi0CjmCapSmO7SnpJef0486qhLnuZ2cdeRhO02iuK6FUUVM" crossorigin="anonymous">
        <link rel="stylesheet" href="https://cdnjs.cloudflare.com/ajax/libs/font-awesome/6.4.0/css/all.min.css">
        {% block stylesheets %}
            {{ encore_entry_link_tags('app') }}
        {% endblock %}
    </head>
    <body>
        <header class="header_post" id="home">
            <nav class="nav_post" id="nav">
                <div class="nav-logo nav-icons">
                    <a class="title-logo" href="{{ path('app_home') }}">Voyage Connect</a>
                    <a href=""><i class="fa-solid fa-bell fa-xl"></i></a>
                    <a href="{{path('app_messages')}}"><i class="fa-solid fa-envelope fa-xl"></i></a>
                </div>
                
                <ul class="nav_links">
                    <li class="nav_item_post">
                        <a href="{{ path('app_home') }}" class="scroll-link">Home</a>
                    </li>
                    
                    <li class="nav_item_post">
                        <a href="{{ path('app_api')}}" class="scroll-link">Explore</a>
                    </li>
                    <li class="nav_item_post">
                        <a href="#" class="scroll-link">About Us</a>
                    </li>
                    <li class="nav_item_post">
                        <a href="{{ path('app_post')}}" class="scroll-link">Your Feed</a>
                    </li>
                    {% if is_granted('ROLE_ADMIN') %}
                    <li class="nav_item_post">
                        <a href="{{ path('admin_index') }}" class="scroll-link">admin</a>
                    </li>
                    {% endif %}
                </ul>

                <div class="nav-right">
                    <div class="nav-user-icon">
                        {% if app.user %}
                            {% if app.user.avatar == null %}
                                <img class="nav-user-pic" s src="{{asset('img/user.png')}}">
                            {% else %}
                                <img  class="nav-user-pic" src="{{asset('uploads/' ~ app.user.avatar)}}" >
                                <i class="fas fa-caret-down"></i> 
                            {% endif %}
                        {% endif %}
                    </div>
    
                    <div class="settings-menu">
                        <div class="settings-menu-inner">
                            <div class="user-profile">
                                {% if app.user %}
                                {% if app.user.avatar == null %}
                                    <img src="{{asset('img/user.png')}}">
                                {% else %}
                                    <img src="{{asset('uploads/' ~ app.user.avatar)}}" > 
                                {% endif %}
                            {% endif %}
                                <div>
                                    {% if app.user %}
                                    <p>{{app.user.pseudo}}</p>
                                    <a href="{{ path('app_user', {'id': app.user.id})}}">See your profil</a>
                                    {% endif %}
                                </div>
                            </div>
                            <hr>
                            <div class="dark-mode">
                                <div>
                                    <p>dark mode button</p>
                                </div>
                                <div id="dark-btn" >
                                    <span></span>
                                </div>
                            </div>
                            <hr>
                            <div class="settings-links">
                                <img src="{{asset('img/images/setting.png')}}" alt="" class="settings-icon">
                                <a href="#">Settings & privacy <img src="{{asset('img/images/arrow.png')}}" width="10px" alt=""></a>
                            </div>
                            <div class="settings-links">
                                <img src="{{asset('img/images/help.png')}}" alt="" class="settings-icon">
                                <a href="#">Help & support <img src="{{asset('img/images/arrow.png')}}" width="10px" alt=""></a>
                            </div>
                            <div class="settings-links">
                                <img src="{{asset('img/images/logout.png')}}" alt="" class="settings-icon">
                                <a href="{{ path('app_logout')}}"> logout <img src="{{asset('img/images/arrow.png')}}" width="10px" alt=""></a>
                            </div>
                        </div>
                    </div>
                </div>
                <div id="burger-menu">
                    <span></span>
                </div>
            </nav>
        </header>
        
        {% block body %}
        
        {% endblock %}
        


        {% block javascripts %}
        <script src="https://code.jquery.com/jquery-3.6.0.min.js"></script>
        <script src="https://cdn.jsdelivr.net/npm/axios/dist/axios.min.js"></script>
        <script src="https://ajax.googleapis.com/ajax/libs/jquery/3.7.0/jquery.min.js"></script>
            {{ encore_entry_script_tags('app') }}
        {% endblock %}
    </body>
</html>
