
{% extends 'base.html.twig' %}

{% block title %}AddPost{% endblock %}

{% block body %}
<div class="registration-form">
    <div>
        {% if edit %}
            <h1 class="add_title">Update a post</h1>
        {% else %}
            <h1 class="add_title"> Add a new post </h1>
        {% endif %}
    </div>
    {{ form_start(formAddpost) }}
        <div class="form-icon">
            <img src="{{asset('img/img.png')}}" class="compass" alt="boussole">
        </div>
        <div class="form-group">
            {{ form_row(formAddpost.title,{
                'attr': {
                    'class': 'd-flex w-100 border border-secondary' } }) }}
        </div>
        <div class="form-group">
            {{ form_row(formAddpost.description,{
                'attr': {
                    'class': 'd-flex w-100' } }) }}
        </div>
        <div class="form-group">
            {{ form_row(formAddpost.image,{
                'attr': {
                    'class': 'd-flex' } }) }}
        </div>
        <div class="form-group">
            {{ form_widget(formAddpost.country) }}
        </div>
    {{ form_end(formAddpost) }}
</div>

{% endblock %}